# upstart {$name} script (requires upstart >=1.4)

description "{$description}"
author "{$author}"

start on runlevel [2345]
stop on runlevel [016]

setuid {$name}

script
    NAME={$name}
    chdir /srv/$NAME
    echo "Starting $NAME at `date +%Y-%m-%d\ %T\ %Z`:"
    set -x
    exec perl -Iperl5/lib/perl5 perl5/bin/carton exec -- perl5/bin/starman -p {$port} bin/app.psgi
end script

